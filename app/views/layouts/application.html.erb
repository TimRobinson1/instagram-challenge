<!DOCTYPE html>
<html>
  <head>
    <title>Exchangeagram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Vibur" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <nav class='navbar'>
      <div class='nav-left-container'>
        <%= link_to image_tag("logo.png", class: 'logo'), root_path %>
        <h1 class='brand-name'>Exchangeagram</h1>
      </div>
      <div class='nav-right-container'>
        <% if signed_in? %>
          <%= button_to 'Sign out', sign_out_path, class: 'clear-btn float-right', method: :delete %>
          <%= link_to "/users/#{current_user.id}" do %>
          <div class='nav-user'>
            <span class='nav-username'><%= current_user.username %></span>
            <%= image_tag(current_user.picture_url, size: User::PROFILE_PIC_SIZES[:nav], class: 'nav-profile-pic') unless current_user.picture.blank? %>
          </div>
          <% end %>
        <% else %>
          <%= button_to 'Sign up', sign_up_path, id: 'sign-up', class: 'clear-btn float-right', method: :get %>
          <%= button_to 'Sign in', sign_in_path, class: 'clear-btn float-right', method: :get %>
        <% end %>
      </div>
    </nav>

    <br />

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
    <%= yield %>
    <footer class='main-footer'>
      <span class='float-left footer-info brand-font'>Exchangeagram</span>
      <a class='footer-img-link float-right' href="https://github.com/TimRobinson1">
        <i class="fa fa-github" aria-hidden="true"></i>
      </a>
      <a class='footer-img-link float-right' href="https://www.youtube.com/watch?v=CewJ-ihIqaM">
        <i class="fa fa-info-circle" aria-hidden="true"></i>
      </a>
    </footer>
  </body>
</html>

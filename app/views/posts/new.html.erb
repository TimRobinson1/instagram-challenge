<%= form_for @post, html: { class: 'new-user', multipart: true } do |form| %>
  <%= form.label :caption %>

  <%= form.text_area :caption %>
  <%= form.hidden_field(:user_id, value: current_user.id) %>

  <%= form.file_field :image %>

  <%= form.label :none %>
  <%= form.radio_button :filter, 'none', checked: 'checked' %>

  <%= form.label :sepia %>
  <%= form.radio_button :filter, 'sepia' %>

  <%= form.label :super_bright %>
  <%= form.radio_button :filter, 'super_bright' %>

  <%= form.label :greyscale %>
  <%= form.radio_button :filter, 'greyscale' %>

  <%= form.label :blur %>
  <%= form.radio_button :filter, 'blur' %>

  <%= form.label :invert %>
  <%= form.radio_button :filter, 'invert' %>

  <%= form.label :saturate %>
  <%= form.radio_button :filter, 'saturate' %>

  <%= form.label :contrast %>
  <%= form.radio_button :filter, 'contrast' %>

  <%= form.label :colourise! %>
  <%= form.radio_button :filter, 'colourise' %>

  <%= form.submit "Submit" %>
<% end %>
